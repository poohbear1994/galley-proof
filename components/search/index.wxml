<view class="container">
  <view class="header">
    <view class="search-container">
      <image class="icon" src="images/search.png" />
      <input value="{{query}}" bind:confirm="onConfirm" placeholder-class="in-bar" placeholder='书籍名称' class="bar" auto-focus="true" />
      <image class="cancel-img" src="images/cancel.png" bind:tap="onDelete" />
    </view>
    <view class="cancel" bind:tap="onCancel">取消</view>
  </view>

  <view wx:if="{{!searching}}">
    <view class="history">
      <view class="title">
        <view class="chunk" />
        <text>历史搜索</text>
      </view>
      <view class="tags">
        <block wx:for="{{historyWords}}" wx:key="item">
          <v-tag bind:tapping="onConfirm" text="{{item}}" />
        </block>
      </view>
    </view>
    <view class="history hot-search">
      <view class="title">
        <view class="chunk"></view>
        <text>热门搜索</text>
      </view>
      <view class="tags">
        <block wx:for="{{hotWords}}" wx:key="item">
          <v-tag bind:tapping="onConfirm" text="{{item}}" />
        </block>
      </view>
    </view>
  </view>

  <view wx:if="{{searching}}" class="books-container">
    <block wx:for="{{dataArray}}" wx:key="id">
      <v-book book="{{item}}" class="book" />
    </block>
  </view>
</view>